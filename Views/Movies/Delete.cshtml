@model MyMovieApp.Models.Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<h2>Are you sure you want to delete this movie?</h2>

<table class="table">
    <tr><th>Title</th><td>@Model.Title</td></tr>
    <tr><th>Genre</th><td>@Model.Genre</td></tr>
    <tr><th>Release Year</th><td>@Model.ReleaseYear</td></tr>
    <tr><th>Rating</th><td>@Model.Rating</td></tr>
</table>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
